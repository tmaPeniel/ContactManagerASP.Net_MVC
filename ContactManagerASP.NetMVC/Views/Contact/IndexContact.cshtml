@model List<Contact>


<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Mes contacts</h1>
            <p class="lead text-body-secondary">Bienvenue sur votre gestionnaire de contact</p>
            <p>
                <a type="btn btn-success" asp-controller="Contact" asp-action="Create" class="btn btn-primary my-2">Créer un contact</a>
                
            </p>
        </div>
    </div>
</section>

<div class=" container">
    <h2 class="fw-light py-4 text-center">Ma liste de contacts</h2>
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Email</th>
            <th scope="col">Numero</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td>@item.Numero</td>
                <td>
                    <a type="btn btn-success" asp-controller="Contact" asp-action="About" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                    <a type="btn btn-success" asp-controller="Contact" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a type="btn btn-success" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>